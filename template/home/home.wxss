.homeWrap{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #FFF;
}
/*顶部留位*/
.homeWrap .homeTop{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 60rpx;
}
.homeWrap .homeTop .homeOpera{
  padding:0 20rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}
.homeWrap .homeTop .homeOpera .screen,.homeWrap .homeTop .homeOpera .search{
  margin: 0 10rpx;
  width: 60rpx;
  height: 60rpx;
}
/*中部留位*/
.homeWrap .homeCtn{
  position: relative;
  margin: auto;
  padding: 60rpx 20rpx 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
/*中部音乐盒子框*/
.homeWrap .homeCtn .musicScroll{
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
  background: #FFF;
  box-shadow: 0 0 20rpx 4rpx #ececec;
  overflow: hidden;
}
.homeWrap .homeCtn .musicScroll .musicBox{
  position: relative;
  height: 100%;
}
/*音乐盒子项*/
.homeWrap .homeCtn .musicScroll .musicBox .musicItem{
  position: relative;
  width: 100%;
  height: 100%;
}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemBg{
  width: 100%;
  height: 100%;
  background-size: cover; 
  -webkit-filter: hue-rotate(180deg);

}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn .musicInfo{
  position: absolute;
  bottom: 150rpx;
  left: 0;
  width: 100%;
  height: 250rpx;
}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn .musicInfo .musicWord{
  padding: 10rpx 20rpx 0;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn .musicInfo .musicWord .musicWordScroll .musicWordText{
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #ececec;
}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn .musicInfo .musicWord .musicWordScroll .musicWordCur{
   display: block;
  line-height: 50rpx;
  font-size: 40rpx;
  color: #FFF;
}


.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn .musicInfo .musicName{
  position: absolute;
  bottom: 0;
  left: 20rpx;
  padding:0 20rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: yellow;
}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn .musicInfo .musicName .musicNameText{
  margin: 0 20rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  vertical-align: middle;
}
.homeWrap .homeCtn .musicScroll .musicBox .musicItem .musicItemCtn .musicInfo .musicName .musicAuthorText{
  margin: 0 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  vertical-align: middle;
}
.homeWrap .homeCtn .musicScroll .musicControls{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150rpx;
    
}
.homeWrap .homeCtn .musicScroll .musicControls .musicControlsButton{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}
.homeWrap .homeCtn .musicScroll .musicControls .musicControlsButton .play,
.homeWrap .homeCtn .musicScroll .musicControls .musicControlsButton .pause{
  margin: 0 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.homeWrap .homeCtn .musicScroll .musicControls .musicControlsButton .share,
.homeWrap .homeCtn .musicScroll .musicControls .musicControlsButton .collect{
  margin: 0 20rpx;
  width: 50rpx;
  height: 50rpx;
}