.submit{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 100%;
  padding: 20rpx;
  background: darkblue;
  box-sizing: border-box;
}
.submit .submitEntry{
  position: relative;
  padding-left: 90rpx;
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.submit .submitEntry .ba{
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -40rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: palevioletred;
  border-radius: 50%;
  text-align: center;
  font-size: 60rpx;

}
.submit .submitEntry .inputWrap{
  padding:0 10rpx;
  width: 400rpx;
  height: 60rpx;
  background: darkorange;
  border-radius: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
  font-size: 0;
}
.submit .submitEntry .inputWrap textarea{
  display: block;
  width: 100%;
  min-height: 100%;
  height: auto;
  line-height: 60rpx;
  font-size: 32rpx;
}
.submit .submitEntry .other{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50%;
  background: #ececec;
  text-align: center;
  font-size: 48rpx;
}
.submit .submitEntry .send{
  padding: 0 20rpx;
  display: inline-block;
  height: 60rpx;
  background: darkcyan;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FFF;
}