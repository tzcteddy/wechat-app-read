/* more-subcontent */
.more-subcontent {
  padding: 40rpx 30rpx;
  border:2rpx solid #ccc;
}
.more-subcontent .more-subcontent-item {
  display:flex;
  flex-direction:column;
  margin-bottom: 30rpx;
